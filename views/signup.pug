extend layout

block content
    form(action="/register", method="post")
        p Email:
            input(type="text", name="email")
        p Age:
            input(type="number", name="age")
        p Username:
            input(type="text", name="username")
        p Password:
            input(type="password", name="password")
        p Favorite Pizza Topping?
            select(name="question_1")
                option(value="Cheese") Cheese
                option(value="Pepperoni") Pepperoni
                option(value="Sausage") Sausage
                option(value="Crust") Crust
        p Astrology sign?
            select(name="question_2")
                option(value="Sage") Sage
                option(value="Rosemary") Rosemary
                option(value="Thyme") Thyme
        p Are Unicorns real?
            select(name="question_3")
                option(value="Yes") Yes
                option(value="No") No
                option(value="Monday") Only on Mondays
        p  
            input(type="submit", value="Register Account")
